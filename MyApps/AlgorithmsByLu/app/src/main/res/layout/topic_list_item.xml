<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rec_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_adb_black_24dp"
        />

    <TextView
        android:id="@+id/rec_title"
        style="@style/RecyclerTitleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rec_img"
        android:text="@string/title"

        />

    <TextView
        android:id="@+id/rec_description"
        style="@style/RecyclerDescriptionItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rec_title"
        android:layout_toEndOf="@id/rec_img"
        android:text="@string/rec_description" />


</RelativeLayout>
</android.support.v7.widget.CardView>